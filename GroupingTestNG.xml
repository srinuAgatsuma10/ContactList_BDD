<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Grouping Test Suite">

    <test name="Smoke Tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="cucumber.filter.tags" value="@Smoke"/>
        <classes>
            <class name="TestRunner.Runner"/>
        </classes>
    </test>

    <test name="Regression Tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="cucumber.filter.tags" value="@Regression"/>
        <classes>
            <class name="TestRunner.Runner"/>
        </classes>
    </test>

    <test name="Regression Tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="cucumber.filter.tags" value="@DataDriven"/>
        <classes>
            <class name="TestRunner.Runner"/>
        </classes>
    </test>
</suite>
